{% extends '@ConnecthollandUser/base.html.twig' %}

{% trans_default_domain 'ConnecthollandUserBundle' %}

{% block connectholland_user_content %}
    <h1>{{ 'connectholland_user.security.login.title'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form._username) }}
        {{ form_row(form._password) }}

        <button type="submit" class="btn">{{ 'connectholland_user.security.login.submit'|trans }}</button>
        <a href='{{ path('connectholland_user_registration') }}'>{{ 'connectholland_user.security.login.register'|trans }}</a>
        <a href='{{ path('connectholland_user_reset') }}'>{{ 'connectholland_user.security.login.reset'|trans }}</a>
    {{ form_end(form) }}
    {% block connectholland_user_login_oauth %}
        {% embed "@HWIOAuth/Connect/login.html.twig" %}
        {% endembed %}
    {% endblock %}
{% endblock %}
